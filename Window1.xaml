<Window x:Class="listview.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:listview"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label Content="Imię*" HorizontalAlignment="Left" Margin="53,70,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Drugie imię" HorizontalAlignment="Left" Margin="53,100,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Nazwisko*" HorizontalAlignment="Left" Margin="53,130,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Data urodzenia*" HorizontalAlignment="Left" Margin="53,160,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Numer telefonu" HorizontalAlignment="Left" Margin="53,190,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Adres zamieszkania*" HorizontalAlignment="Left" Margin="53,220,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Miejscowość*" HorizontalAlignment="Left" Margin="53,250,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Kod pocztowy*" HorizontalAlignment="Left" Margin="53,280,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>
        <Label Content="Pesel*" HorizontalAlignment="Left" Margin="53,310,0,0" Width="100px" Height="30px" VerticalAlignment="Top"/>

        <TextBox x:Name ="nameAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="secondnameAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="surnameAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="dateofbirthAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,160,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="phonenumberAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,190,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="adressAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,220,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="cityAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="zipcodeAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,280,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />
        <TextBox x:Name ="peselAdd" HorizontalAlignment="Left" Width="100px" Height="30px" Margin="400,310,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" />


        <Button x:Name="goback" Content="OK" HorizontalAlignment="Left" Margin="598,379,0,0" VerticalAlignment="Top" Height="30" Width="70" Click="goback_Click"/>
        
        <Button x:Name="goback_cancel" Content="Anuluj" HorizontalAlignment="Left" Margin="686, 379, 0, 0" VerticalAlignment="Top" Height="30" Width="70" Click="goback_cancel_Click"></Button>
    </Grid>
</Window>
